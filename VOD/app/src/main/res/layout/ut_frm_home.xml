<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Red"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/bt_entity_vod"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Play entity VOD" />

            <Button
                android:id="@+id/bt_entity_vod_21_9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Play entity VOD 21:9" />

            <Button
                android:id="@+id/bt_entity_vod_portrait"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Play entity VOD Portrait" />

            <Button
                android:id="@+id/bt_entity_live"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Play entity LIVE" />

            <Button
                android:id="@+id/bt_playlist_folder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Play Playlist folder" />

            <Button
                android:id="@+id/bt_switch_screen"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Login" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:padding="@dimen/padding_5"
                android:text="This is Home Scren"
                android:textSize="@dimen/txt_80" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>